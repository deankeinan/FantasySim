immoral(character,act):-
     (conflicts_morality(character,act); conflicts_nature(character,act)).

conflicts_morality(character,act):-
     (
       morality(character,good), morality(act,evil);
       morality(character,evil), morality(act, good)
     ).

conflicts_nature(character,action):-
      (
       (nature(character, good), nature(action, evil));
       (nature(character, evil), nature(action, good))
     ).
